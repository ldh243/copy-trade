{
  "compilerOptions": {
    "lib": ["ESNext", "es2016", "DOM"],
    "target": "ES2019",
    "module": "commonjs",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "removeComments": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["@types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
